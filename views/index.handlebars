<header>
  <div class="row">
    <div class="col-md-12">
      <h1 align="center">Eat-Da-Burger</h1>
    </div>
  </div>
</header>



<form class="create-form">

  <div align="center" class="form-group">
    <h2>Add your favorite Burger</h2>
    <div class="col-md-3">
    <label for="burger"><b>Burger Name:</b></label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit" class="btn btn-success">Add Burger</button>
</form>

  <div align="left" class="row">
    <div class="col-md-6">
    <h3 align="left">Ready to Eat</h3>
    <ul>
  {{#each burgers}}
    {{#unless devoured}}
      <ul>
        {{this.id}}
        {{this.burger_name}}
         <form class="update-burger" value="{{this.id}}" method="PUT">
			          <button class="btn btn-success" type="submit">Devoure It!</button>
			        </form>
        </ul>
    {{/unless}}
  {{/each}}
</ul>
</div>
  
  

  <div align="right" class="row">
    <div class="col-md-12">
    <h3 align="right">Devoured</h3>
    <ul>
  {{#each burgers}}
    {{#if this.devoured}}
     <ul>
       {{this.id}}
       {{this.burger_name}}</ul>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
  </div>
   <div align="center" class="burger_pic">
    <div class="col-md-2"></div>
      <br>
      <br>
      <img src="http://vectips.com/wp-content/uploads/2016/02/25.jpg" height="250px" width="250px">
    </div>
 


